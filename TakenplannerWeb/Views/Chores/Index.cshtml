@model TakenplannerWeb.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Chores Overview</h2>

@if (Model.expiredChores.Count() > 0)
{
    <p style="color: red">There are @Model.expiredChores.Count() number of expired chores!</p>
}
@if (Model.almostExpiredChores.Count() > 0)
{
    <p style="color: red">@Model.almostExpiredChores.Count() number of chores are almost expired!</p>
}

<p>
    @Html.ActionLink("Add New Chore", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <div>Backlog</div>
        </th>
        <th>
            <div>To Do</div>
        </th>
        <th>
            <div>Doing</div>
        </th>
        <th>
            <div>Done</div>
        </th>
    </tr>
    <tr>
        <td>
            <table class="table chore">
                @foreach (var item in Model.backlogChores)
                {
                <tr>
                    <td @(item.Expired ? "class = expired" : "")>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                </tr>
                }
            </table>
        </td>
        <td>
            <table class="table chore">
                @foreach (var item in Model.todoChores)
                {
                <tr>
                    <td @(item.Expired ? "class = expired" : "")>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                </tr>
                }
            </table>
        </td>
        <td>
            <table class="table chore">
                @foreach (var item in Model.doingChores)
                {
                <tr>
                    <td @(item.Expired ? "class = expired" : "")>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                </tr>
                }
            </table>
        </td>
        <td>
            <table class="table chore">
                @foreach (var item in Model.doneChores)
                {
                <tr>
                    <td @(item.Expired ? "class = expired" : "") >
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                </tr>
                }
            </table>
        </td>
    </tr>

</table>