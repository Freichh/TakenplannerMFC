@model TakenplannerWeb.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <div>Backlog</div>
        </th>
        <th>
            <div>To Do</div>
        </th>
        <th>
            <div>Doing</div>
        </th>
        <th>
            <div>Done</div>
        </th>
    </tr>
    <tr>
        <td>
            <table class="table backlog">
                @foreach (var item in Model.backlogchores)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name) <br/>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </td>
        <td>
            <table class="table todo">
                @foreach (var item in Model.todochores)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name) <br />
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </td>
        <td>
            <table class="table doing">
                @foreach (var item in Model.doingchores)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name) <br />
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </td>
        <td>
            <table class="table done">
                @foreach (var item in Model.donechores)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name) <br />
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </td>
    </tr>

</table>        
    
