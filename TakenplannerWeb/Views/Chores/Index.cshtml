@model TakenplannerWeb.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Chores Overview</h2>

<p>There are @Model.allChores.Count() number of chores!</p>
<p style="color: red">There are @Model.expiredChores.Count() number of expired chores!</p>
<p>There are @Model.backlogChores.Count() number of Backlog chores!</p>
<p>There are @Model.todoChores.Count() number of ToDo chores!</p>
<p>There are @Model.doingChores.Count() number of Doing chores!</p>
<p>There are @Model.doneChores.Count() number of Done chores!</p>

<p>
    @Html.ActionLink("Add New Chore", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <div>Backlog</div>
        </th>
        <th>
            <div>To Do</div>
        </th>
        <th>
            <div>Doing</div>
        </th>
        <th>
            <div>Done</div>
        </th>
    </tr>
    <tr>
        <td>
            <table class="table chore">
                @foreach (var item in Model.backlogChores)
                {
                <tr>
                    <td @(item.Expired ? "class = expired" : "")>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                </tr>
                }
            </table>
        </td>
        <td>
            <table class="table chore">
                @foreach (var item in Model.todoChores)
                {
                <tr>
                    <td @(item.Expired ? "class = expired" : "")>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                </tr>
                }
            </table>
        </td>
        <td>
            <table class="table chore">
                @foreach (var item in Model.doingChores)
                {
                <tr>
                    <td @(item.Expired ? "class = expired" : "")>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                </tr>
                }
            </table>
        </td>
        <td>
            <table class="table chore">
                @foreach (var item in Model.doneChores)
                {
                <tr>
                    <td @(item.Expired ? "class = expired" : "") >
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                </tr>
                }
            </table>
        </td>
    </tr>

</table>

